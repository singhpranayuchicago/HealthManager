<link href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
<div class="jrow mb-3">
  <div class="col-md-8 offset-md-2">
    <h1> Doctor List </h1>
</div>
</div>

<hr>

<div class="row mb-3">
  <div class="col-md-8 offset-md-2">
    <h2>
      Add a new doctor
    </h2>

    <form action="/insert_doctor" method="post">
      <div class="form-group">
        <label for="name_box">
          Name
        </label>

        <input type="text" id="name_box" name="name_from_query" class="form-control">
      </div>

      <div class="form-group">
        <label for="speciality_box">
          Speciality
        </label>

        <input type="text" id="speciality_box" name="speciality_from_query" class="form-control">
      </div>

        <div class="form-group">
            <label for="rating_box"> Rating </label>
            <select class="form-control" id="rating_box" name="rating_from_query">
                    <option value=1>1</option>
                    <option value=2>2</option>
                    <option value=3>3</option>
                    <option value=4>4</option>
                    <option value=5>5</option>
            </select>
          </div>

      <button class="btn btn-block btn-outline-secondary">
        Create doctor
      </button>
    </form>
  </div>
</div>

<hr>
<div class="row mb-3">
  <div class="col-md-12">
    <table class="table">
      <tr>

        <th>
          Name
        </th>

        <th>
          Speciality
        </th>

        <th>
          Latest Rating <i> (Five Point Scale) </i>
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @doctors.each do |doctor| %>
      <tr>

        <td>
          <%= doctor.name %>
        </td>

        <td>
          <%= doctor.speciality %>
        </td>

          <td>
          <%= doctor.rating %>
        </td>

        <td>
          <%= time_ago_in_words(doctor.created_at) %> ago
        </td>
        <td>
          <%= time_ago_in_words(doctor.updated_at) %> ago
        </td>

        <td>
          <a href="/doctors/<%= doctor.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>

<hr>
